                <script>

                    function fillAddress(name, phone, pin, address) {
                        console.log('Im fillAddress');
                        $('#fname').val(name);
                        $('#fnum').val(phone);
                        $('#fpin').val(pin);
                        $('#faddress').val(address);
                    }

                    function saveAddress(name, mobile, pin, address) {
                        if (value1 && value2 && value3 && value4 && value5) {
                            console.log(`${address}`);
                            $.ajax({
                                url: `/save-address`,
                                method: 'POST',
                                data: {
                                    name,
                                    mobile,
                                    pin,
                                    address
                                },
                                success: (response) => {
                                    if (response.error) {
                                        document.getElementById("paddress").style.display = "block";
                                        document.getElementById("paddress").innerText = `${response.error}`;
                                    } else {
                                        const Toast = Swal.mixin({
                                            toast: true,
                                            position: 'top-end',
                                            showConfirmButton: false,
                                            timer: 800,
                                            timerProgressBar: true,
                                            didOpen: (toast) => {
                                                toast.addEventListener('mouseenter', Swal.stopTimer)
                                                toast.addEventListener('mouseleave', Swal.resumeTimer)
                                            }
                                        })
                                        Toast.fire({
                                            icon: 'success',
                                            title: 'Address saved'
                                        })
                                    }
                                }
                            })
                        }
                    }

                    $("#request").submit((e) => {
                        e.preventDefault()
                        if (value1 && value2 && value3 && value4 && value5 && value6) {
                            price = parseInt(document.getElementById("tot").value)
                            $.ajax({
                                url: `/place-order/${price}`,
                                method: 'post',
                                data: $('#request').serialize(),
                                success: (response) => {
                                    console.log("RESPONSE", response);
                                    if (response.codSuccess) {
                                        location.href = '/order-success'
                                    } else {
                                        razorpayPayment(response)
                                    }
                                }
                            })
                        }
                    })

                    function razorpayPayment(order) {
                        var options = {
                            "key": "rzp_test_lVOl3OlIGN7MEp", // Enter the Key ID generated from the Dashboard
                            "amount": order.amount, // Amount is in currency subunits. Default currency is INR. Hence, 50000 refers to 50000 paise
                            "currency": "USD",
                            "name": "Mobkart",
                            "description": "Order Transaction",
                            "image": "https://example.com/your_logo",
                            "order_id": order.id, //This is a sample Order ID. Pass the `id` obtained in the response of Step 1
                            "handler": function (response) {
                                verifyPayment(response, order)
                            },
                            "prefill": {
                                "name": "shamnad s",
                                "email": "shamnadshamnu661@gmail.com",
                                "contact": "9207068689"
                            },
                            "notes": {
                                "address": "Mobkart Corporate Office"
                            },
                            "theme": {
                                "color": "#3d389c"
                            }
                        };
                        var rzp1 = new Razorpay(options);
                        rzp1.open();
                    }

                    function verifyPayment(payment, order) {
                        $.ajax({
                            url: "/verify-payment",
                            data: { payment, order },
                            method: "POST",
                            success: (response) => {
                                console.log('RESPONSE : ', response);
                                if (response.status) {
                                    console.log('Payment Successfully : ', response);
                                    location.href = '/order-success'
                                } else {
                                    console.log("Payment Failed&&&&&&&&&&&&&");
                                    alert('Payment failed');
                                }
                            }
                        })
                    }
